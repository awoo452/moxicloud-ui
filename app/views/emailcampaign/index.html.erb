<h1>Associated Attributes - EmailCampaign</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>General Info</th>
      <th>EmailCampaign Info</th>
      <th>Product Info</th>
    </tr>
  </thead>
  <tbody>
    <% @associated_attrs.each do |attr| %>
    <% if attr.associated_endpoints.include?("EmailCampaign") %>
    <tr>
      <td><%= attr.attr_title %></td>
      <td><%= attr.general_info %></td>
      <td><%= attr.emailcampaign_info %></td>
      <% if attr.product_info['EmailCampaign'].present? %>
      <td>
      <% attr.product_info['EmailCampaign'].each do |key, value| %>
        <strong><%= key %>:</strong> 
        <% if value.is_a?(Array) %>
        <%= value.join("<br>").html_safe %>
        <% else %>
        <%= value %>
        <% end %>
        <br><br>
        <% end %>
      </td>
      <% end %>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>